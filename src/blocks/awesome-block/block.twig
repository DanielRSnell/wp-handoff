{% set blockClasses = [
    'wp-block-acf-awesomeblock',
    'wp-block-acf-awesomeblock--' ~ fields.style|default('default'),
    block.className|default(''),
]|join(' ')|trim %}

<div id="{{ block.id }}" class="{{ blockClasses }}">
    <h2 class="awesomeblock__title">{{ fields.title }}</h2>
    {% include "@block/awesomeblock/components/example.twig" %}
</div>

{{ source('@block/awesomeblock/styles.css') }}

<script>
document.addEventListener('DOMContentLoaded', function() {
    const block = document.getElementById('{{ block.id }}');
});
</script>
