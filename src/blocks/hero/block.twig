{% set blockClasses = ['wp-block-acf-hero', 'wp-block-acf-hero--' ~ (fields.style|default('default')), block.className|default('')]|join(' ')|trim %}

<div id="{{ block.id }}" class="{{ blockClasses }}">
  <h2 class="hero__title">{{ fields.title }}</h2>
  {% include '@block/hero/components/example.twig' %}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const block = document.getElementById('{{ block.id }}')
  })
</script>
