{% set blockClasses = [
    'wp-block-acf-quote',
    'wp-block-acf-quote--' ~ fields.style|default('default'),
    block.className|default(''),
]|join(' ')|trim %}

<div id="{{ block.id }}" class="{{ blockClasses }}">
    <h2 class="quote__title">{{ fields.title }}</h2>
    {% include "@block/quote/components/example.twig" %}
</div>

{{ source('@block/quote/styles.css') }}

<script>
document.addEventListener('DOMContentLoaded', function() {
    const block = document.getElementById('{{ block.id }}');
});
</script>
