{% set blockClasses = [
    'wp-block-acf-{{lowercase_name}}',
    'wp-block-acf-{{lowercase_name}}--' ~ fields.style|default('default'),
    block.className|default(''),
]|join(' ')|trim %}

<div id="{{ block.id }}" class="{{ blockClasses }}">
    <h2 class="{{lowercase_name}}__title">{{ fields.title }}</h2>
    {% include "@block/{{lowercase_name}}/components/example.twig" %}
</div>

{{ source('@block/{{lowercase_name}}/styles.css') }}

<script>
document.addEventListener('DOMContentLoaded', function() {
    const block = document.getElementById('{{ block.id }}');
});
</script>
